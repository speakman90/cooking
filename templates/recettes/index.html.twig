{% extends 'base.html.twig' %}

{% block title %}Recettes{% endblock %}

{% block body %}
    <h1>Toutes les recettes</h1>

        {% for recette in recettes %}

            <div class="rct-container">
                <div class="rct-main">
                    <h2>{{ recette.title }}</h2>
                    <img src="{{ asset('image/'~recette.image) }}" alt="{{ recette.title }}">
                    <a href="{{ path('app_recettes_show', {'id': recette.id}) }}">En savoir plus</a>
                </div>
            </div>

        {% endfor %}

    {% if app.user %}
        <a href="{{ path('app_recettes_new') }}">Poster une recette</a>
    {% endif %}

{% endblock %}
