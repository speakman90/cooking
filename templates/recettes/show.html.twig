{% extends 'base.html.twig' %}

{% block title %}Recettes{% endblock %}

{% block body %}
    <h1>Recettes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recette.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ recette.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ recette.slug }}</td>
            </tr>
            <tr>
                <th>Ingredient</th>
                <td>{{ recette.ingredient }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ recette.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('image/'~recette.image) }}" alt=""></td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ user.username }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_recettes_index') }}">back to list</a>
    {% if app.user %}
        {% if app.user.id == user.id %}
        <a href="{{ path('app_recettes_edit', {'id': recette.id}) }}">edit</a>
        {% else %}

        {% endif %}
    {% endif %}

    {{ include('recettes/_delete_form.html.twig') }}
{% endblock %}
